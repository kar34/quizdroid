<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kar34.washington.edu.quizdroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Overview"
            android:label="@string/title_activity_overview" >
        </activity>
        <activity
            android:name=".Quiz"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name=".Question"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".Answer"
            android:label="@string/title_activity_answer" >
        </activity>
        <activity
            android:name=".DetailedActivity"
            android:label="@string/title_activity_detailed"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kar34.washington.edu.quizdroid.MainActivity" />
        </activity>
    </application>

</manifest>
